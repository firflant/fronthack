{
  "name": "fronthack-hugo",
  "version": "0.0.1",
  "description": "File structure bootstrapped with Fronthack",
  "scripts": {
    "start": "concurrently 'hugo server -D' 'webpack --watch --mode=development'",
    "build": "webpack --mode=production && hugo",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "babel-loader": "latest",
    "babel-minify-webpack-plugin": "latest",
    "concurrently": "latest",
    "gh-pages": "latest",
    "htmlhint": "latest",
    "sass-lint": "latest",
    "webpack": "latest",
    "webpack-cli": "latest"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "engines": {
    "node": ">=0.10.0"
  }
}
